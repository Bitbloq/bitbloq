{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prettier": "prettier --write \"packages/*/src/**/*.{ts,js,tsx,jsx,json,md,scss,yml}\"",
    "tslint:dev": "tslint -c ./tslint-dev.json \"packages/*/src/**/*.ts\"",
    "tslint:prod": "tslint -c ./tslint-prod.json \"packages/*/src/**/*.ts\""
  },
  "devDependencies": {
    "prettier": "^1.18.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  }
}
